@model versity.data.Models.Restaurant
@using versity.data.Models

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details - @Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>
<div>
    <h4>Menus</h4>
    @Html.ActionLink("New Menu", "New", "Menus", new { restaurantId = Model.ID }, new { })
    <table class="table-bordered">
        <tr>
            <th>Name</th>
            <th>Active?</th>
        </tr>
        @foreach (Menu menu in Model.Menus)
        {
            <tr>
                <td>@Html.ActionLink(@menu.Name, "Details", "Menus", new { menuId = @menu.ID }, new {})</td>
                <td>@menu.Active</td>
            </tr>
        }
    </table>
</div>

<div>
    <h4>Hours</h4>
    @Html.ActionLink("New Hours", "Create", "Hours", new { restaurantId = Model.ID }, new { })
    <table class="table-bordered">
        <tr>
            <th>Day</th>
            <th>Open</th>
            <th>Closed</th>
        </tr>
        @foreach (Hours hour in Model.Hours)
        {
            <tr>
                <td>@Html.ActionLink(@hour.Day.ToString(), "Edit", "Hours", new {id = @hour.ID}, new{})</td>
                <td>@hour.Open</td>
                <td>@hour.Closed</td>
            </tr>
        }
    </table>
</div>
<p style="margin-top: 20px">
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
